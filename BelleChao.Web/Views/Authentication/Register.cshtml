

@model UserToRegisterDTO

<form asp-action="Register" method="post" class="form-horizontal" role="form">
    <h4>You are just one step from getting your food at your doorstep</h4>
    <div class="form-group offset-3">
        <label asp-for="FirstName" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="FirstName" class="form-control" />
        </div>
    </div>
    <div class="form-group offset-3">
        <label asp-for="LastName" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="LastName" class="form-control" />
        </div>
    </div>
    <div class="form-group offset-3">
        <label asp-for="Address" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="Address" class="form-control" />
        </div>
    </div>
    <div class="form-group offset-3">
        <label asp-for="Email" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="form-group offset-3">
        <label asp-for="Username" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="Username" class="form-control" />
        </div>
    </div>
    <div class="form-group offset-3">
        <label asp-for="Password" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="Password" class="form-control" />
        </div>
    </div>

    <div class="form-group offset-3">
        <label asp-for="ConfirmPassword" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>
    </div>
    <div class="form-group offset-3">
        <label asp-for="City" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="City" class="form-control" />
        </div>
    </div>
    <div class="form-group offset-3">
        <label asp-for="State" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="State" class="form-control" />
        </div>
    </div>
    <div class="form-group offset-3">
        <label asp-for="Avatar" class="col-md-2 custom-control-label"></label>
        <div class="col-md-6">
            <input asp-for="Avatar" class="form-control" />
        </div>
    </div>
    <div class="form-group offset-3">
        <div class="col-md-5 offset-2">
            <input type="submit"  class="btn btn-primary" value="Register"/>
        </div>
    </div>
</form>

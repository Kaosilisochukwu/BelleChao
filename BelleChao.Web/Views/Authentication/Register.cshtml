

@model UserToRegisterDTO


<form asp-action="Register" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
    <h4>You are just one step from getting your food at your doorstep</h4>
    <div class="form-group offset-3">
        <label asp-for="FirstName" class="col-md-3 control-label"></label>
        <div class="col-md-6">
            <input asp-for="FirstName" class="form-control" />
        </div>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group offset-3">
        <label asp-for="LastName" class="col-md-3 control-label"></label>
        <div class="col-md-6">
            <input asp-for="LastName" class="form-control" />
        </div>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group offset-3">
        <label asp-for="Address" class="col-md-3 control-label"></label>
        <div class="col-md-6">
            <input asp-for="Address" class="form-control" />
        </div>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group offset-3">
        <label asp-for="Email" class="col-md-3 control-label"></label>
        <div class="col-md-6">
            <input asp-for="Email" class="form-control" />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group offset-3">
        <label asp-for="UserName" class="col-md-3 control-label"></label>
        <div class="col-md-6">
            <input asp-for="UserName" class="form-control" />
        </div>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group offset-3">
        <label asp-for="PhoneNumber" class="col-md-3 control-label"></label>
        <div class="col-md-6">
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group offset-3">
        <label asp-for="Password" class="col-md-3 control-label"></label>
        <div class="col-md-6">
            <input asp-for="Password" class="form-control" />
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group offset-3">
        <label asp-for="ConfirmPassword" class="col-md-3 control-label"></label>
        <div class="col-md-6">
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group offset-3">
        <label asp-for="City" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="City" class="form-control" />
        </div>
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group offset-3">
        <label asp-for="State" class="col-md-3 control-label"></label>
        <div class="col-md-6">
            <input asp-for="State" class="form-control" />
        </div>
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group offset-3">
        <label asp-for="Avatar" class="col-md-3 custom-control-label"></label>
        <div class="col-md-6">
            <input asp-for="Avatar" class="form-control" />
        </div>
        <span asp-validation-for="Avatar" class="text-danger"></span>
    </div>
    <div class="form-group offset-3">
        <div class="col-md-5 offset-2">
            <input type="submit" class="btn btn-primary" value="Register" />
        </div>
    </div>
</form>



@model UserToLoginDTO

<form asp-action="Login" method="post" class="form-horizontal" role="form">
    <h4>You are just one step from getting your food at your doorstep</h4>
    <div class="form-group offset-3">
        <label asp-for="Email" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="form-group offset-3">
        <label asp-for="Password" class="col-md-2 control-label"></label>
        <div class="col-md-6">
            <input asp-for="Password" class="form-control" />
        </div>
    </div>
    <div class="form-group offset-3">
        <label asp-for="IsPersistent" class="col-md-2 control-label"></label>
        <div class="checkbox col-md-6">
            <input asp-for="IsPersistent" />
        </div>
    </div>   
    
    <div class="form-group offset-3">
        <div class="col-md-5 offset-2">
            <input type="submit" class="btn btn-primary" value="Login" />
        </div>
    </div>
</form>
